<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center_horizontal">

    <EditText
        android:id="@+id/searchEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/search_icon"
        android:hint="search tutor"
        android:inputType="text|textPersonName"
        android:singleLine="false"
        android:textColor="@color/colorLightPrimary"
        android:textColorHint="@color/colorLightPrimary" />

    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEARCH"
        android:layout_toRightOf="@id/userInputTutor"
        android:textColor="@color/colorLightPrimary"
        android:minWidth="50dp"
        android:paddingTop="8dp"
        android:paddingRight="9dp"
        android:paddingLeft="9dp"
        android:background="@color/colorPrimary"
        />

    <Button
        android:id="@+id/advsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/search"
        android:background="@color/colorPrimary"
        android:minWidth="50dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:text="Adv Search"
        android:textColor="@color/colorLightPrimary" />

    <Button
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/advsearch"
        android:background="@color/colorPrimary"
        android:minWidth="50dp"
        android:paddingTop="8dp"
        android:paddingLeft="3dp"
        android:text="MAP"
        android:layout_toEndOf="@id/advsearch"
        android:textColor="@color/colorLightPrimary" />

    <FrameLayout
        android:id="@+id/searchframelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view" />

</RelativeLayout>
