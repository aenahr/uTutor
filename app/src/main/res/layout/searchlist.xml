<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center_horizontal">

    <EditText
        android:id="@+id/searchEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/search_icon"
        android:hint="Search Email"
        android:inputType="text|textPersonName"
        android:singleLine="false"
        android:textColor="@color/colorLightPrimary"
        android:textColorHint="@color/colorLightPrimary" />

    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEARCH"
        android:layout_toEndOf="@id/searchEmail"
        android:textColor="@color/colorLightPrimary"
        android:minWidth="50dp"
        android:paddingTop="8dp"
        android:paddingRight="9dp"
        android:paddingLeft="9dp"
        android:background="@color/colorPrimary"
        />

    <Button
        android:id="@+id/advsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/search"
        android:background="@color/colorPrimary"
        android:minWidth="50dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:text="Adv"
        android:textColor="@color/colorLightPrimary" />

    <Button
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/advsearch"
        android:background="@color/colorPrimary"
        android:minWidth="50dp"
        android:paddingTop="8dp"
        android:paddingLeft="3dp"
        android:text="MAP"
        android:layout_toEndOf="@id/advsearch"
        android:textColor="@color/colorLightPrimary" />

    <TextView
        android:id="@+id/sortby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchEmail"
        android:text="Sort by"
        android:textStyle="bold"
        android:textColor="@color/colorLightPrimary"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/sUniversity"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchEmail"
        android:layout_toRightOf="@+id/sortby"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-10dp"
        android:text="University" />

    <Button
        android:id="@+id/sRating"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchEmail"
        android:layout_toRightOf="@+id/sortby"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-10dp"
        android:layout_toEndOf="@+id/sUniversity"
        android:text="Rating" />


    <FrameLayout
        android:id="@+id/searchframelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view"
        android:layout_marginTop="40dp"
        />


</RelativeLayout>
