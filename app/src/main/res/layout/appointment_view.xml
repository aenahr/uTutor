<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightPrimary">

    <TextView
        android:id="@+id/titleAppointmentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APPOINTMENT"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:id="@+id/tutorLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/titleAppointmentView">
        <TextView
            android:id="@+id/tutorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutor Email:"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tutorInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test@test.com"
            android:layout_gravity="center"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tuteeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tutorLayout"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/tuteeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutee Email:"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tuteeInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test@test.com"
            android:textSize="15dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dateLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tuteeLayout">
        <TextView
            android:id="@+id/dateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/dateInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XX-XX-XXXX"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/startTimeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dateLayout">
        <TextView
            android:id="@+id/sTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Time:"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/sTimeInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XX:XX - XX:XX"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/endTimeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/startTimeLayout"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/eTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Time:"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/eTimeInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XX:XX - XX:XX"
            android:textSize="20dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tutorQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:text="Would you like to accept the appointment?"
        android:layout_below="@id/endTimeLayout"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tutorQuestion"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/bAccept"
            android:text="YES"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/realGreen"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/bDecline"
            android:text="NO"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/reddish"/>
    </LinearLayout>

    <Button
        android:id="@+id/bCancel"
        android:text="Cancel Appointment"
        android:textColor="@color/white"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonLayout"/>


</RelativeLayout>