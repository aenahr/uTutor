<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filterpage"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/clearall"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPrimaryDark"
                android:text="Clear all"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/colorLightPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ratingtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clearall"
                android:text="Ratings"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorLightPrimary"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="3dp"/>

            <RatingBar
                android:id="@+id/ratingBar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/clearall"
                android:numStars="5" />

            <EditText
                android:id="@+id/firstname"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="40dp"
                android:textSize="25dp"
                android:textStyle="italic"
                android:layout_below="@+id/ratingtext"
                android:ems="10"
                android:inputType="text"
                android:hint="enter first name"
                android:background="@color/colorLightPrimary"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="40dp"
                android:textSize="25dp"
                android:textStyle="italic"
                android:layout_below="@+id/firstname"
                android:ems="10"
                android:inputType="text"
                android:hint="enter last name"
                android:background="@color/colorLightPrimary"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/searchsubject"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="40dp"
                android:textSize="25dp"
                android:textStyle="italic"
                android:layout_below="@+id/lastname"
                android:ems="10"
                android:inputType="text"
                android:hint="enter subject"
                android:background="@color/colorLightPrimary"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/searchUni"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="40dp"
                android:textSize="25dp"
                android:textStyle="italic"
                android:layout_below="@+id/searchsubject"
                android:ems="10"
                android:inputType="text"
                android:hint="enter unversity name"
                android:background="@color/colorLightPrimary"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>