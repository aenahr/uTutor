<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filterpage"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="110dp"
                android:layout_toLeftOf="@+id/clearall"
                android:text="Preferences"
                android:textColor="@color/colorLightPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/clearall"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPrimaryDark"
                android:text="Clear all"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/colorLightPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/sortby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview"
                android:text="Sort by"
                android:textStyle="bold"
                android:textColor="@color/colorLightPrimary"
                android:layout_marginLeft="5dp"/>

            <Button
                android:id="@+id/sUniversity"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sortby"
                android:layout_marginStart="5dp"
                android:text="University" />

            <Button
                android:id="@+id/sRating"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sortby"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/sUniversity"
                android:text="Rating" />

            <TextView
                android:id="@+id/ratingtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sUniversity"
                android:text="Ratings"
                android:textStyle="bold"
                android:textColor="@color/colorLightPrimary"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="3dp"/>

            <RatingBar
                android:id="@+id/ratingBar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/sUniversity"
                android:numStars="5" />

            <EditText
            android:id="@+id/firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingtext"
            android:ems="10"
            android:inputType="text"
            android:hint="First name"
            android:background="@color/colorLightPrimary"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstname"
                android:ems="10"
                android:inputType="text"
                android:hint="Last name"
                android:background="@color/colorLightPrimary"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/searchsubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lastname"
                android:ems="10"
                android:inputType="text"
                android:hint="Subject"
                android:background="@color/colorLightPrimary"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/searchUni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/searchsubject"
                android:ems="10"
                android:inputType="text"
                android:hint="University"
                android:background="@color/colorLightPrimary"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>