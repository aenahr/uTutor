<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fillApointment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/colorLightPrimary">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titlePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="EDIT PROFILE PICTURE"
            android:layout_centerHorizontal="true"
            android:textSize="34dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/subtitlePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Select a head:"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/titlePic"
            android:textSize="20dp"/>

        <RadioGroup
            android:id="@+id/choiceHead"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/subtitlePic">
            <RadioButton
                android:id="@+id/blueHead"
                android:button="@null"
                android:background="@drawable/checkbox_blue"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"/>
            <RadioButton
                android:button="@null"
                android:id="@+id/greenHead"
                android:background="@drawable/checkbox_green"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"/>
            <RadioButton
                android:id="@+id/purpleHead"
                android:button="@null"
                android:background="@drawable/checkbox_purple"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"/>
            <RadioButton
                android:id="@+id/redHead"
                android:button="@null"
                android:background="@drawable/checkbox_red"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"/>
            <RadioButton
                android:id="@+id/yellowHead"
                android:button="@null"
                android:background="@drawable/checkbox_yellow"
                android:layout_width="90dp"
                android:layout_height="90dp"
                />
        </RadioGroup>

        <Button
            android:id="@+id/saveChanges"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/choiceHead"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_border"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/Cancel_bio"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Cancel"
            android:layout_below="@+id/saveChanges"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_border"
            android:textColor="@color/white"/>

    </RelativeLayout>
</ScrollView>