<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fillApointment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorLightPrimary">
    <RelativeLayout
        android:id="@+id/fillAppointmentRelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/tutorEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-black"
            android:text="Tutor Email"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/userInputTutorEmail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_text_background"
            android:text="test@gmail.com"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tuteeEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="82dp"
            android:fontFamily="sans-serif-black"
            android:text="Your Email"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/userInputTuteeName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/edit_text_background"
            android:text="currentUser's email"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="132dp"
            android:fontFamily="sans-serif-black"
            android:text="Date"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/dateOutput"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/edit_text_background"
            android:text="Date output..."
            android:textAlignment="center"
            android:textStyle="italic"
            android:padding="5dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/dateInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/userInputTuteeName"
            android:layout_marginRight="10dp"
            android:layout_marginTop="17dp"
            android:background="@color/colorPrimary"
            android:minHeight="30dp"
            android:minWidth="50dp"
            android:text="..."
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/timeStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-black"
            android:text="Time Start"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/editTimeStart"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/date"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/edit_text_background"
            android:hint="click to edit time..."
            android:padding="5dp"
            android:textAlignment="center"
            android:onClick="pickTime"/>


        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeStart"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-black"
            android:text="Location"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/locationOutput"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editTimeStart"
            android:layout_marginRight="70dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_background"
            android:text="Location output..."
            android:textAlignment="center"
            android:textStyle="italic"
            android:padding="5dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/locationInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/editTimeStart"
            android:layout_marginRight="10dp"
            android:layout_marginTop="19dp"
            android:background="@color/colorPrimary"
            android:minHeight="30dp"
            android:minWidth="50dp"
            android:text="..."
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/sendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-black"
            android:text="Send Message"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/editSendMessage"
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:layout_below="@+id/sendMessage"
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_background"
            android:gravity="top|left"
            android:hint="click to edit time..."
            android:inputType="textMultiLine"
            android:maxLength="150"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/setAppointmentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editSendMessage"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_round"
            android:text="Set Appointment"
            android:textColor="@color/white"
            android:visibility="visible" />

    </RelativeLayout>

</ScrollView>